
class Solution {
    public Node addOne(Node head) {
        // code here.
        head = rev(head);
        Node temp = head;
        while(temp.next!=null){
            if(temp.data<9){
                temp.data++;
                head = rev(head);
                return head;
            }
            temp.data = 0;
            temp=temp.next;
        }
        if(temp.data==9){
            Node newNode = new Node(1);
            temp.data=0;
            temp.next = newNode;
        }
        else temp.data++;
        head = rev(head);
        return head;
    }
    public Node rev(Node head){
        if(head==null || head.next==null) return head;
        Node newHead = rev(head.next);
        Node front = head.next;
        front.next = head;
        head.next = null;
        
        return newHead;
    }
}
